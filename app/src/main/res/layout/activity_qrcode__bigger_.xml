        android:layout_height="386dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_code_scanner_auto_focus_off"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="136dp" />


</RelativeLayout>