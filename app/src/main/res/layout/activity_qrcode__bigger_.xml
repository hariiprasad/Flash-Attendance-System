    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRCode.QRCode_Bigger_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Class Code"
